<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#8F24B2" />
            <gradient
                android:type="radial"
                android:gradientRadius="550"
                android:startColor="#0066FF"
                android:endColor="#002966"/>
            <stroke
                android:width="1dp"
                android:color="#CC33FF" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="550"
                android:startColor="@color/btn_pink_light"
                android:endColor="@color/btn_pink_dark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0066FF" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>